doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom Zoom Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header 
            h1 Zoom Zoom Zoom
        main
            div#welcome
                form
                    input(type="text", placeholder="room name", required)
                    button Enter Room
            div#call
                div#myStream
                    video#myFace(autoplay, playinlin, widht="400", height="400")
                    button#muteBtn Mute
                    button#cameraBtn Turn Camera Off
                    select#cameras
            video#peerFace(autoplay, playinlin, widht="400", height="400")
        footer &copy; #{new Date().getFullYear()} ZZZ
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")