extends ./layout/layout

block contents
    main
        div#welcome
            div.container--bg
                section.nav
                    span ZZz 👀
                section.main__welcome
                    ion-icon(name="chatbubbles-outline")
                    h1 줌 클론 라이브 챗
                    h2 지금 라이브 챗에 참여하세요.
                section.formBox
                    form.formBox__form
                        input.formBox__form__input(type="text", placeholder="사용할 닉네임 입력하기", minlength=1, maxlength=10, required)
                        button.formBox__form__btn
                            ion-icon(name="add-circle-outline")
        div#watingRoom
            div.container--bg
                section.nav
                    span ZZz 👀
                    section.nav__user
                        span#nickname
                        ion-icon(name="person-circle-outline" style={ 'font-size': '30px'})
                section.main__watingRoom
                    div.main__watingRoom__rooms
                        section.main__watingRoom__rooms--icon
                            div.icon--background
                                ion-icon.icon--bg(name="people-circle-outline")
                        section.main__watingRoom__rooms--user
                            span.roomBox__nickname summereuna
                            span.roomBox__roomName 방 제목
                            button.btn--round 입장하기
                    div.main__watingRoom__rooms
                        section.main__watingRoom__rooms--icon
                            div.icon--background
                                ion-icon.icon--bg(name="people-circle-outline")
                        section.main__watingRoom__rooms--user
                            span.roomBox__nickname summereuna
                            span.roomBox__roomName 방 제목
                            button.btn--round 입장하기
                section.formBox
                    form.formBox__form
                        input.formBox__form__input(type="text", placeholder="새롭게 만들 방 제목 입력하기", required)
                        button.formBox__form__btn
                            ion-icon(name="enter-outline")
        div#room
            div.container--bg
                div#call.nav
                    select#cameras
                    ion-icon(name="mic-outline" style={ 'font-size': '30px'})#muteBtn
                    ion-icon(name="videocam-outline" style={ 'font-size': '30px'})#cameraBtn
                    ion-icon#leaveRoomBtn(name="close-outline" style={ 'font-size': '30px'})
                div.container--video
                    div.main__room__video
                        video#myFace(autoplay, playsinline)
                        video#peerFace(autoplay, playsinline)
                    div#roomChat.main__room__chat
                        div#chatList.main__room__chat__chatList
                            ul
                        section#chatForm.main__room__chat__chatForm.formBox
                            form.formBox__form
                                input.formBox__form__input.formBox__form__input--w(type="text", placeholder="메세지 입력하기...", required)
                                button.formBox__form__btn.btn--w(type="submit")
                                    ion-icon(name="paper-plane-outline" style={ 'font-size': '30px'})
                                button.formBox__form__btn.btn--w#chatHeart(type="button")
                                    ion-icon(name="heart-outline" style={ 'font-size': '30px'})