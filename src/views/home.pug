doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom Zoom Zoom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header 
            h1 Zoom Zoom Zoom
        main
            div#welcome
                form
                    input(type="text", placeholder="Room Name", required)
                    button Enter Room
                h4 Open Rooms:
                ul
            div#room
                h3
                ul
                form#nickname
                    input(type="text", placeholder="Your Nickname", required)
                    button Save
                form#msg
                    input(type="text", placeholder="Write a message", required)
                    button Send
        footer &copy; #{new Date().getFullYear()} ZZZ
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")